<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/circle_button_background</item>
        <item name="android:textColor">#6A1B9A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CategoryHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>


</resources>
