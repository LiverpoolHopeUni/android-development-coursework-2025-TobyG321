<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rewards_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFEB8A">



    <!-- Progress Background Bar -->
    <View
        android:id="@+id/background_bar"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/black" />

    <!-- Progress Fill -->
    <View
        android:id="@+id/progress_fill"
        android:layout_width="8dp"
        android:layout_alignStart="@id/background_bar"
        android:layout_alignBottom="@id/background_bar"
        android:background="@color/green"
        android:layout_height="0dp" />

    <!-- Vertical Stack of Rewards -->
    <LinearLayout
        android:id="@+id/reward_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/background_bar"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:baselineAligned="false">

        <!-- 5000 pts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游꾸 5000 pts" />
            <ImageButton
                android:id="@+id/rewardbox_5000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:src="@drawable/reward_banquet" />
        </LinearLayout>

        <!-- 3000 pts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游꾸 3000 pts" />
            <ImageButton
                android:id="@+id/rewardbox_3000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:src="@drawable/reward_dog" />
        </LinearLayout>

        <!-- 1500 pts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游꾸 1500 pts" />
            <ImageButton
                android:id="@+id/rewardbox_1500"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:src="@drawable/reward_meal" />
        </LinearLayout>

        <!-- 500 pts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游꾸 500 pts" />
            <ImageButton
                android:id="@+id/rewardbox_500"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:src="@drawable/reward_fries" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
