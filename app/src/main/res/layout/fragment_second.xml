<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFEB8A"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Logo (Fixed size) -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/hotdog"
            android:layout_marginTop="24dp" />

        <!-- Stamp Card (1 weight) -->
        <LinearLayout
            android:id="@+id/stampCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_yellow_card"
            android:orientation="horizontal"
            android:gravity="center"
            android:elevation="4dp">
        </LinearLayout>

        <!-- Order Button (1 weight) -->
        <!-- Orders Button (1 weight) -->
        <LinearLayout
            android:id="@+id/ordersButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_yellow_card"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/ic_orders"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_orders"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDERS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Deals + Menu Row (2 weight) -->
        <LinearLayout
            android:id="@+id/dealsMenuRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/dealsButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_yellow_card"
                android:padding="12dp"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/ic_deals"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_deals"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEALS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/menuButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_yellow_card"
                android:padding="12dp"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/ic_hotdog"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_hotdog"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MENU"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Rewards Button (1 weight) -->
        <LinearLayout
            android:id="@+id/rewardsButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_yellow_card"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/ic_rewards"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_rewards"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REWARDS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
