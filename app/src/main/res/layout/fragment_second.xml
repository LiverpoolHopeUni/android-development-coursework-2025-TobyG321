<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF8F4"
    tools:context=".SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"
            android:layout_marginBottom="16dp" />

        <!-- Stamp Book (Images in circular buttons) -->
        <!-- Stamp Book (Images in circular buttons) -->

        <!-- Deals and Orders buttons -->
        <!-- Stamp/Voucher container -->
        <FrameLayout
            android:id="@+id/stamp_container"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Original stamp layout (keep as is) -->
            <LinearLayout
                android:id="@+id/stamp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_container"
                android:orientation="vertical">

                <!-- Top row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stamp_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:contentDescription="Stamp 1"
                        android:src="@drawable/empty" />

                    <ImageView
                        android:id="@+id/stamp_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:contentDescription="Stamp 2"
                        android:src="@drawable/empty" />

                    <ImageView
                        android:id="@+id/stamp_3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:contentDescription="Stamp 3"
                        android:src="@drawable/empty" />
                </LinearLayout>

                <!-- Bottom row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stamp_4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:contentDescription="Stamp 4"
                        android:src="@drawable/empty" />

                    <ImageView
                        android:id="@+id/stamp_5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:contentDescription="Stamp 5"
                        android:src="@drawable/empty" />
                </LinearLayout>
            </LinearLayout>

            <!-- Voucher view (initially hidden) -->
            <ImageView
                android:id="@+id/voucher_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/voucher"
                android:visibility="gone"
                android:contentDescription="Voucher" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/deals_button"
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_container"
                android:contentDescription="Deals"
                android:scaleType="fitXY"
                android:src="@drawable/deals"
                android:padding="2dp"/>

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:background="@drawable/rounded_container"
                android:contentDescription="Menu"
                android:scaleType="fitXY"
                android:src="@drawable/menu"
                android:padding="2dp"/>
        </LinearLayout>

        <!-- Rewards Button -->
        <ImageButton
            android:id="@+id/rewards_button"
            android:layout_width="332dp"
            android:layout_height="140dp"
            android:background="@drawable/rounded_container"
            android:contentDescription="Rewards"
            android:scaleType="fitXY"
            android:src="@drawable/rewards"
            android:padding="2dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
