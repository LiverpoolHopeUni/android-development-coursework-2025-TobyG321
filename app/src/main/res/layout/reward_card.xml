<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_yellow_card"
    android:elevation="8dp"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/reward_title"
        android:text="Seattle"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="#5B3000"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Optionally include image here -->
    <ImageView
        android:id="@+id/reward_image"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:scaleType="centerInside"
        android:src="@drawable/seattle"
        android:contentDescription="Reward image" />

    <TextView
        android:id="@+id/reward_points"
        android:text="3000"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>