<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="#FFEB8A"
    android:fillViewport="true">

    <LinearLayout

        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#FFEB8A"
        android:layout_gravity="top|center_horizontal">

        <!-- Deals Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFEB8A">

            <TextView
                android:id="@+id/deals_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEALS"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#5B3000"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFEB8A">

                <!-- Dog of the day -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"

                    android:padding="1dp">

                    <!-- Background: Dog of the Day Poster -->
                    <ImageButton
                        android:id="@+id/dog_of_the_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:padding="0dp"
                        android:src="@drawable/dog_of_the_day"
                        android:contentDescription="Dog of the Day Poster" />

                    <!-- Overlay: Hotdog on the Podium -->
                    <ImageView
                        android:id="@+id/featured_dog"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="30dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="Featured Hotdog"
                        android:scaleType="fitCenter"
                        android:src="@drawable/coney" />
                </FrameLayout>

                <!-- 🎡 Roulette & 🌶️ Spicy Roulette side-by-side -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:weightSum="2">

                    <!-- Roulette Image -->
                    <!-- Roulette Image -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        >

                        <ImageButton
                            android:id="@+id/roulette"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/roulette"
                            android:contentDescription="Roulette"
                            android:padding="0dp"/>
                    </FrameLayout>

                    <!-- Spicy Roulette Image -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        >

                        <ImageButton
                            android:id="@+id/spicy_roulette"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/spicy_roulette"
                            android:contentDescription="Spicy Roulette"
                            android:padding="0dp"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- 🍽️ Meal Deal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/meal_deal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/meal_deal"
                        android:padding="0dp"
                        android:contentDescription="Meal Deal Image" />
                </LinearLayout>

                <!-- 👫 Meal for Two -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/meal_for_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/meal_for_two"
                        android:contentDescription="Meal Deal Image"
                        android:padding="0dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
